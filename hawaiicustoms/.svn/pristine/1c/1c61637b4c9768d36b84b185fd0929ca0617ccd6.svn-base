/* CSS Document */

.small-logo-spacer {
	padding-right: 30px;
	vertical-align:middle;
}

.rhb-gray-box {
	width: 400px;
	border: 1px dotted #CCCCCC;
	margin-right: 10px;
	float: left;
	display: inline;
	margin-bottom: 10px;
	height: 260px;
	position:relative;
}

.box-picture {
	width: 200px;
	height: 250px;
	float:left;
	display:inline;
	padding-bottom: 10px;
}

.box-text {
	padding: 10px;
	display:inline;
}

.rhb-viewdetails {
	display: block;
	position:absolute;
	bottom: 10px;
	right: 10px;
}

